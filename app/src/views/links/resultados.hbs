        </fieldset>




        <fieldset class="form-group position-relative has-icon-left mb-0 col-3 pl-0 pr-1">
            <button style=""  type="submit" class="btn btn-primary full-width" data-dismiss="modal">Buscar</button>
        </fieldset>


      </form>
    </div>

    <div class="pt-3 text-bold-600 font-medium-2 col-12 mb-0 text-center ">
      RESTULTADOS:
    </div>
