            <div class="m-0 p-0">
              <h4>{{nick}}</h4>
              <p class="">{{bio}}</p>
            </div>
            <div class="avatar avatar-xl ">
              <img class="img-fluid" src="{{imagen_perfil}}" alt="img placeholder">
            </div>
            <div class="row">
              <button onclick="window.location.href = '/links/ver_perfil/{{id}}'" class="btn gradient-light-primary waves-effect waves-light col">Ver</button>
            </div>
            <hr class="my-1 ">
            <div class="d-flex justify-content-between">
              <div class="float-left">
                <i class="feather icon-star text-warning mr-50"></i> 4.9
              </div>
              <div class="float-right">
                <i class="feather icon-home text-primary mr-50"></i>
                <i class="feather icon-video text-primary mr-50"></i>
              </div>
            </div>
          </div>

        </div>
      </div>


    </div>
    {{/each}}


